.top-box {  

    /* 顶部框样式 */  
    
        display: flex;  
        justify-content: center;  
        align-items: center;  
        height: 15px; /* 或其他合适的高度 */  
    background-color: #ec6c5f;  
    
    padding: 10px;  
  
    border-bottom: 1px solid #ccc;  
  
  }
  .header{
    background-image: -webkit-gradient(linear, left bottom, left top, from(#f3a381), color-stop(50%, #ec6c5f));
    background-image: -webkit-linear-gradient(bottom, #db978f, #ec6c5f 50%);
    background-image: linear-gradient(0deg, #e4d0cd, #ec6c5f 50%);
    width: 100%;
    height: 190px;
    border-bottom-left-radius: 100%;
    border-bottom-right-radius: 100%;
}

.list {
    width: 100%;
    padding: 5px;
    box-sizing: border-box;
}

.list .item {
    width: 48%;
    padding: 5px;
    box-sizing: border-box;
    float: left;
    background: #fff;
    margin: 2px 1%;
}

.list .item .goods_img image {
    width: 160px;
    height: 190px;

}

.list .item .goods_info .goods_name {
    font-size: 14px;
    text-align: left;
    line-height: 1.05rem;
    height: 2.1rem;
    font-family: -apple-system, Helvetica, sans-serif;
    overflow: hidden;
    color: #434343;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
}

.list .item .goods_info .goods_price {
    font-style: normal;
    font-family: JDZH-Regular, sans-serif;
    display: inline-block;
    font-size: 0.7rem;
    line-height: 1.5rem;
    color: #ff4142;
}

.list .item .goods_info .goods_price text{
    font-size: 1rem;
}